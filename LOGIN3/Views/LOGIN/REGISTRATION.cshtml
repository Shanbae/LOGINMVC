<body>
    @*<img src="/Views/Images/pexels-pixabay-531880.jpg">*@
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                @*<img src="https://images.pexels.com/photos/4403172/pexels-photo-4403172.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1">*@
            </div>

            <div class="col-xl-6">
                <form id="newRegistration" class="">
                    <div class="card transparent-card mb-5">
                        <div class="card-body ">
                            <div class="row mb-4">
                                <label for="Firstname" class="col-sm-4">First name</label>
                                <div class="form-group col-sm-6">
                                    <input type="text" class="form-control" id="FirstName" name="FirstName">
                                    <div id="FirstNameerror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="Lastname" class="col-sm-4">Last name</label>
                                <div class="form-group col-sm-6">
                                    <input type="text" class="form-control" id="LastName" name="LastName">
                                    <div id="LastNameerror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="email" class="col-sm-4">DOB</label>
                                <div class="form-group col-sm-6">
                                    <input class="form-control" type="date" id="dob" name="DOB" required>
                                    <div id="doberror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="email" class="col-sm-4">EMAIL</label>
                                <div class="form-group col-sm-6">
                                    <input class="form-control" type="email" id="Email" name="Email" placeholder="name@email.com" required>
                                    <div id="Emailerror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="phone" class="col-sm-4">PHONE</label>
                                <div class="form-group col-sm-6">
                                    <input class="form-control" type="tel" id="phone" name="PhoneNumber" maxlength="10">
                                    <div id="PhoneNumbererror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="RegistrationPassword" class="col-sm-4">Password</label>
                                <div class="form-group col-sm-6">
                                    <input type="text" class="form-control" id="RegistrationPassword">
                                    <div id="RegistrationPassworderror"><p> </p></div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label for="ConfirmPassword" class="col-sm-4">Confirm Password</label>
                                <div class="form-group col-sm-6">
                                    <input type="text" class="form-control" id="ConfirmPassword" name="ConfirmPassword">
                                    <div id="ConfirmPassworderror"><p> </p></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-8"></label>
                                <button class=" btn btn-group btn-success btn-sm-4 mt-4" type="button" id="btnregsubmit" name="btnregsubmit">SUBMIT</button>
                            </div>

                            <div class="form-group">
                                <label class="col-md-8"></label>
                                <button class=" btn btn-group btn-success btn-sm-4 mt-4" type="button" id="btnCamera" name="btnCamera">OPEN WEBCAM</button>

                            </div>
                            <div class="form-group">
                                <label class="col-md-8"></label>
                                <button class=" btn btn-group btn-success btn-sm-4 mt-4" type="button" id="btnCapture" name="btnCapture">CAPTURE</button>
                                <div id="webcam"></div>
                                <img id="imgCapture" />
                            </div>
                            <div class="form-group">
                                <label class="col-md-8"></label>
                                <button class=" btn btn-group btn-danger btn-sm-4 mt-4" type="button" id="btnImgDelete" name="btnImgDelete" disabled="disabled">DELETE IMAGE</button>

                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>


    </div>
